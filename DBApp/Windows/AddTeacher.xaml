<Window x:Class="DBApp.Windows.AddTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBApp.Windows"
        mc:Ignorable="d"
        Title="AddTeacher" Height="350" Width="350">
    <Grid>
        <StackPanel>

            <TextBlock Text="Имя" Margin="5"/>
            <TextBox x:Name="FirstNameTB" Margin="5" Height="30"/>
            <TextBlock Text="Фамилия" Margin="5"/>
            <TextBox x:Name="LastNameTB" Margin="5" Height="30"/>
            <TextBlock Text="Email" Margin="5"/>
            <TextBox x:Name="EmailTB" Margin="5" Height="30"/>

            <Button x:Name="AddTeacherBtn" Content="Добавить" Height="30" Width="160" Margin="15" Click="AddTeacherBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
