<Window x:Class="DBApp.Windows.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBApp.Windows"
        mc:Ignorable="d"
        Title="AddGroup" Height="350" Width="350">
    <Grid>
        <StackPanel>

            <TextBlock Text="Имя группы" Margin="5"/>
            <TextBox x:Name="NameTB" Margin="5" Height="30"/>

            <Button x:Name="AddGroup_btn" Content="Добавить" Height="30" Width="160" Margin="15" Click="AddGroup_btn_Click"/>
        </StackPanel>
    </Grid>
</Window>
